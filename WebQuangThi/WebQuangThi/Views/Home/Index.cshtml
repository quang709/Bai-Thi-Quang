<div class="row">

    <partial name="~/Views/Home/blog1.cshtml"></partial>
    @model HomeIndexVM
    <div class="col-xl-3 col-lg-4 col-md-5 sidebar">
        <div id="stickySidebar">
            <div class="widget-item">
                <h4 class="widget-title">Trending</h4>
                <div class="trending-widget">
           


                    @foreach (var item in Model.Posts)
                    {
                        <div class="tw-item">
                            <div class="tw-thumb">
                                <img src="./img/blog-widget/1.jpg" alt="#">
                            </div>
                            <div class="tw-text">
                                <div class="tw-meta">11.11.18 / in <a asp-route-id="@item.Category.Id">Games </a> </div>
                                <a href="" data-filter="@item.Title"> @item.Title</a>
                            </div>
                        </div>

                    }



                  
                    </div>
            </div>
           
            <div class="widget-item">
                <div class="categories-widget">
                    <h4 class="widget-title">categories</h4>
                    @foreach (var item in Model.Categories)
                    {
                        <ul>

                        <li><a href="">@item.CategoryName</a></li>

                     
                    </ul>
                    }
                    </div>
            </div>
         
            <div class="widget-item">
                <a href="#" class="add">
                    <img src="./img/add.jpg" alt="">
                </a>
            </div>
        </div>
    </div>
</div>

